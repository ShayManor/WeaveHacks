{
  "manifest": {
    "displayName": "WeaveHacks AI Assistant",
    "category": "AI_ASSISTANT",
    "version": "1.0.0",
    "description": "Custom AI assistant that processes voice commands through /prompt API"
  },
  "deviceTypes": [
    {
      "deviceType": "action.devices.types.CUSTOM_DEVICE",
      "displayName": "WeaveHacks AI",
      "description": "AI assistant that responds to voice commands",
      "traits": [
        "action.devices.traits.OnOff",
        "action.devices.traits.TextResponse",
        "action.devices.traits.Modes"
      ],
      "attributes": {
        "availableModes": [
          {
            "name": "mode",
            "name_values": [
              {
                "name_synonym": ["mode", "setting"],
                "lang": "en"
              }
            ],
            "settings": [
              {
                "setting_name": "chat",
                "setting_values": [
                  {
                    "setting_synonym": ["chat", "conversation", "talk"],
                    "lang": "en"
                  }
                ]
              },
              {
                "setting_name": "assist",
                "setting_values": [
                  {
                    "setting_synonym": ["assist", "help", "support"],
                    "lang": "en"
                  }
                ]
              }
            ],
            "ordered": false
          }
        ]
      }
    }
  ],
  "traits": {
    "action.devices.traits.OnOff": {
      "commands": {
        "action.devices.commands.OnOff": {
          "devices": [
            {
              "name": "WeaveHacks AI",
              "id": "weavehacks-ai-device"
            }
          ],
          "execution": [
            {
              "command": "action.devices.commands.OnOff",
              "params": {
                "on": true
              }
            }
          ]
        }
      }
    },
    "action.devices.traits.TextResponse": {
      "commands": {
        "action.devices.commands.TextResponse": {
          "devices": [
            {
              "name": "WeaveHacks AI",
              "id": "weavehacks-ai-device"
            }
          ],
          "execution": [
            {
              "command": "action.devices.commands.TextResponse",
              "params": {
                "text": "Hello! I'm your WeaveHacks AI assistant. How can I help you today?"
              }
            }
          ]
        }
      }
    }
  }
} 